<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="after">
                <field name="passport"/>
                <field name="birthdate"/>
                <field name="age"/>
            </xpath>
            <xpath expr="//field[@name='category_id']" position="after">
                <field name="nationality_ids" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>

        <record id="view_partner_nationality_form" model="ir.ui.view">
            <field name="name">res.partner.nationality.form</field>
            <field name="model">res.partner.nationality</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                    </group>
                    <group>
                        <field name="country_id"/>
                    </group>
                </form>
            </field>
        </record>
</odoo>
